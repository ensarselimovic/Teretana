@model IEnumerable<ISTeretana.Models.PlanTreninga>

@{
    ViewData["Title"] = "Planovi treninga";
}

<div class="container mt-4">
    <div class="row">
        <div class="col">
            <h1 class="display-4 text-primary">Planovi treninga</h1>
            <p>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle"></i> Novi plan treninga
                </a>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Naziv)</th>
                        <th>@Html.DisplayNameFor(model => model.Opis)</th>
                        <th>@Html.DisplayNameFor(model => model.Clan)</th>
                        <th>@Html.DisplayNameFor(model => model.Trener)</th>
                        <th>@Html.DisplayNameFor(model => model.Teretana)</th>
                        <th>Akcije</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Naziv</td>
                            <td>@item.Opis</td>
                            <td>@item.Clan?.Email</td>
                            <td>@item.Trener?.Email</td>
                            <td>@item.Teretana?.Adresa</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil-square"></i> Uredi
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-info me-1">
                                    <i class="bi bi-eye"></i> Detalji
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Obriši
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
